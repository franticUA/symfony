{% extends 'BlogBundle::layouts/base.html.twig' %}
{% block content %}

    <h1>{{ article.title }}</h1>
    <article>
        <div class="article-content">{{ article.content|raw }}</div>
        <div class="article-title">
            <div>
                <a href="{{ path('API_article', {'id': article.id}) }}" data-ajax="" data-method="post"
                    data-action="{% if article.userLike > 0 %}unlike{% else %}like{% endif %}">
                    +1
                </a> |  {{ article.rating }} |
                <a href="{{ path('API_article', {'id': article.id}) }}" data-ajax="" data-method="post"
                   data-action="{% if article.userLike < 0 %}unlike{% else %}dislike{% endif %}">
                    -1
                </a>
            </div>
            <div>{{ article.user.username }}</div>
            <div>{{ article.created|date('l, F j, Y') }}</div>
        </div>
    </article>

    <div class="comments">
        <h3>Comments</h3>
        {% if comments|length > 0 %}
            {% for comment in comments %}

                <div class="comment">
                    <div class="comment-title">
                        <div class="comment-rating">
                            <a href="{{ path('API_comment', {'id': comment.id}) }}" data-ajax="" data-method="post"
                               data-action="{% if comment.userLike > 0 %}unlike{% else %}like{% endif %}">
                                +1
                            </a> |  {{ comment.rating }} |
                            <a href="{{ path('API_comment', {'id': comment.id}) }}" data-ajax="" data-method="post"
                               data-action="{% if comment.userLike < 0 %}unlike{% else %}dislike{% endif %}">
                                -1
                            </a>
                        </div>
                        <div class="comment-author">
                            {{ comment.user.username }}
                        </div>
                        <div class="comment-date">
                            {{ comment.created|date('l, F j, Y') }}
                        </div>
                    </div>
                    <div class="comment-content">
                        {{ comment.content }}
                    </div>
                    <div class="comment-add">
                        <button type="button" class="btn btn-default add-comment-btn">Добавить</button>
                        <div class="comment-form"></div>
                    </div>
                </div>
            {% endfor %}
        {% endif %}

        <h3>Add Comment</h3>
        <div class="form-wrap">
            {{ render(controller('BlogBundle:Comment:new',{ 'id': article.id })) }}
        </div>
    </div>
<script type="application/javascript">
$(document).ready(function () {

});
</script>
{% endblock %}