<nav>
    <ul class="pagination">
        {% if paginator.page > 1 %}
            <li class="page-item">
                <a class="page-link" href="{{ path('BlogBundle_list', {'page': paginator.page-1 }) }}" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
        {% endif %}
        {% for i in paginator.start..paginator.end %}
            <li class="page-item {% if i == paginator.page %}active{% endif %}">
                <a class="page-link"
                   href="{{ path('BlogBundle_list', {'page': i}) }}"
                >{{ i }}</a>
            </li>
        {% endfor %}
        {% if paginator.page < paginator.pages %}
            <li class="page-item">
                <a class="page-link" href="{{ path('BlogBundle_list', {'page': paginator.page+1 }) }}" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        {% endif %}
    </ul>
</nav>