<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title></title>
        {% block css %}
            <link rel="stylesheet" href="/vendor/bootstrap/dist/css/bootstrap.min.css" />
            <link rel="stylesheet" href="/vendor/alertify/themes/alertify.core.css" />
            <link rel="stylesheet" href="/vendor/alertify/themes/alertify.bootstrap.css" />
        {% endblock %}
    </head>
    <body>
        {% block navbar %}
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="/">HOME</a>
                    </div>

                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

                        <div class="navbar-form navbar-right">

                            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                Hello, {{ app.user.username }}!
                                <a href="{{ path('fos_user_security_logout') }}">
                                    [{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}]
                                </a>
                            {% else %}
                                <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                            {% endif %}
                        </div>
                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </nav>
        {% endblock %}
        {% block body %}

        {% endblock %}
        {% block js %}
            <script>
                window.applicationOptions = {
                    user: 'get user info here'
                }
            </script>

            <script src="/vendor/jquery/dist/jquery.min.js"></script>
            <script src="/vendor/bottlejs/dist/bottle.min.js"></script>
            <script src="/vendor/bootstrap/dist/js/bootstrap.min.js"></script>
            <script src="/vendor/rivets/dist/rivets.bundled.min.js"></script>
            <script src="/vendor/alertify/alertify.min.js"></script>

            <script src="/js/src/utils.js"></script>

            <script src="/js/src/Application.js"></script>
            <script src="/js/src/init.js"></script>

            <script src="/js/src/classes/Request.js"></script>
            <script src="/js/src/classes/Messanger.js"></script>
            <script src="/js/src/widgets/Article.js"></script>
            <script src="/js/src/repositories/Article.js"></script>
            <script src="/js/src/classes/RepositoriesFactory.js"></script>

        {% endblock %}
    </body>
</html>
