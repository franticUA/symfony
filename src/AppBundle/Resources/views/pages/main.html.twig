{% extends 'AppBundle::layouts/base.html.twig' %}
{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <a class="btn btn-primary" href='#'>Add</a>
            </div>
        </div>
        <div class="row">

            {% for item in items %}
                <div class="col-xs-12"
                    data-module="widgets.Article"
                    data-id="{{ item.id }}">

                    <div class="article">
                        <div class="article__title">
                            {{ item.title }}
                        </div>
                        <div class="article__content"
                            data-on-click="like">
                        </div>
                        <div class="article__comments"
                            data-html="item.comments">
                        </div>
                    </div>
                </div>
            {% endfor %}

        </div>
    </div>

{% endblock %}
